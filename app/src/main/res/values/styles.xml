<resources>

    <!-- Base application theme. --> <!--parent="Theme.AppCompat.Light.NoActionBar"-->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar" >
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#4b50df</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">#868ae9</item>
        <item name="colorControlActivated">#868ae9</item>
    </style>

    <style name="AppTheme.white" parent="Base.Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#FFFFFF</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DialogAni">
        <item name="android:windowEnterAnimation">@anim/dialog_slide_up</item>
    </style>
</resources>
