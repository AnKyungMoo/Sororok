               <RelativeLayout
                   android:id="@+id/layout_animation"
                   android:layout_width="match_parent"
                   android:layout_height="253dp"
                   android:layout_alignParentBottom="true"
                   android:visibility="invisible">
                   <LinearLayout
                       android:id="@+id/layout_sure_txt"
                       android:layout_width="match_parent"
                       android:layout_height="240dp"
                       android:orientation="vertical"
                       android:gravity="center"
                       android:background="#ffffff"
                       android:layout_above="@id/layout_select_button">
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="정말 계정을 삭제하시려구요?"
                           android:fontFamily="@font/notosanscjkkr_bold"
                           android:includeFontPadding="false"
                           android:textColor="#000000"
                           android:textSize="20sp"
                           android:paddingBottom="30dp"/>
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textSize="14sp"
                           android:gravity="center_horizontal"
                           android:text="번호가 바뀌셨다거나 기기를 변경하신 것이라면\n로그아웃하시는 것을 추천드립니다."/>
                   </LinearLayout>
                   <LinearLayout
                       android:id="@+id/layout_select_button"
                       android:layout_width="match_parent"
                       android:layout_height="56dp"
                       android:orientation="horizontal"
                       android:layout_alignParentBottom="true"
                       android:weightSum="1">

                       <Button
                           android:layout_width="wrap_content"
                           android:layout_height="match_parent"
                           android:layout_weight="0.5"
                           android:background="#d3d5da"
                           android:fontFamily="@font/notosanscjkkr_medium"
                           android:includeFontPadding="false"
                           android:text="로그아웃"
                           android:textColor="#FFFFFF"
                           android:textSize="20sp" />
                       <Button
                           android:layout_width="wrap_content"
                           android:layout_height="match_parent"
                           android:background="#4b50df"
                           android:text="계정삭제"
                           android:textSize="20sp"
                           android:fontFamily="@font/notosanscjkkr_medium"
                           android:includeFontPadding="false"
                           android:textColor="#FFFFFF"
                           android:layout_weight="0.5"/>
                   </LinearLayout>
           </RelativeLayout>


       <!-- </RelativeLayout>
    </RelativeLayout>-->
</RelativeLayout>