        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/layout_when_click_remove_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
                &lt;!&ndash;<LinearLayout
