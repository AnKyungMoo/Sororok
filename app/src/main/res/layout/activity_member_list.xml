<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MemberListActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="183dp">
            <LinearLayout
                android:id="@+id/ll_blue"
                android:layout_width="match_parent"
                android:layout_height="108dp"
                android:orientation="horizontal"
                android:background="#343acf"></LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:orientation="horizontal"
                android:layout_below="@id/ll_blue">
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp" />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="84dp"></RelativeLayout>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_back"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/backbutton"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10pt"
                android:text="LIST 01"
                android:layout_toRightOf="@id/btn_back"
                android:layout_marginLeft="20dp"/>

            <Button
                android:id="@+id/btn_setting"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/setting_button" />

        </RelativeLayout>

        <EditText
            android:id="@+id/edit_find_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="찾으시는 성함/번호를 입력해주세요"
            android:textSize="7pt"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/btn_select_all"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/blackbutton"/>

        <com.nexters.sororok.adapter.MemberListwithAdapter
            android:id="@+id/list_member"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"/>



    </LinearLayout>
    <Button
        android:id="@+id/btn_save_selected"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#80343acf"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:text="선택 저장" />
</RelativeLayout>