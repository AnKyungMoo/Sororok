<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#4b50df">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="126dp"
            android:layout_height="18dp"
            android:background="#ffa1be"
            android:layout_alignTop="@+id/login_main_text"
            android:layout_marginTop="27dp"
            android:layout_marginLeft="24dp"/>

        <TextView
            android:id="@+id/login_main_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosanscjkkr_bold"
            android:text="Sororok에\n어서와요!\n:)"
            android:textSize="30sp"
            android:textColor="@android:color/white"
            android:layout_marginTop="108dp"
            android:layout_marginLeft="29dp"
            android:includeFontPadding="false"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="67dp">

        <ImageButton
            android:id="@+id/google_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/login_google"
            android:background="@android:color/transparent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"/>

        <ImageButton
            android:id="@+id/naver_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/login_naver"
            android:background="@android:color/transparent"
            android:layout_below="@+id/google_button"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"/>

        <ImageButton
            android:id="@+id/kakao_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/login_kakao"
            android:background="@android:color/transparent"
            android:layout_below="@+id/naver_button"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"/>
    </RelativeLayout>
</LinearLayout>
